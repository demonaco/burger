<div id="container">
    
<img src="/assets/img/burger.png">

<h2>Out-n'-In Burgers</h2>
<div class="row">
<div class="col-md-6">
<div class="card">
  <div class="card-body">
      <ul>
   {{#each burgers}}
{{#unless devoured}}
<span><strong>{{this.ID}} - {{this.burger_name}}</strong></span>
<button type="button" class="change-devour" data-id="{{this.ID}}" data-newDevour="{{devour}}">devour</button>
<hr>
{{/unless}}
{{/each}}
</ul>
  </div>
</div>
</div>
<div class="col-md-6">
<div class="card">
    <div class="card-body">
        <div>Devoured burgers</div>
        <ul>
{{#each burgers}}
{{#if devoured}}
<span><strong>{{this.ID}} - {{this.burger_name}}</strong></span>
{{!-- <button type="button" id="deleteButton" data-id="{{this.ID}}">Delete</button> --}}
<hr>
{{/if}}
{{/each}}
</ul>
    </div>
</div>
</div>
</div>



<form class="create-form">

<div class="form-group">
<input type="text" id="inputForm" placeholder="What kind of burger are ya hankerin' for?"></input>
</div>
<br>
<br>
<br>
<button type="button" id="submitButton" type="submit">Submit</button>
</form>

